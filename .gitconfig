[difftool]
  external = ~/script/git_diff_cmd.sh
[url "https://"]
  # corporate firewalls no like git
  insteadOf = git://
[github]
  user = dcarney
[alias]
  unstage = reset HEAD
  # pretty history
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  go = checkout
  # Undo a `git push`
  undopush = push -f origin HEAD^:master
  s = status
  # short status
  ss = status -s
  d = diff
  dt = difftool
  a = add
  r = checkout --
  pom = pull origin master
  pr = pull --rebase
  prom = pull --rebase origin master
  branches = branch -a
  tags = tag -l
  # works in conjunction with the above 'hist' alias
  showlast = show HEAD
  showstash = stash show -p
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  editor = vim
[push]
  # 'git push' will push the current branch to its upstream branch
  # see http://goo.gl/GLcPZ for details
  default = upstream
